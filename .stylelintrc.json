{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "rules": {
    "number-leading-zero": ["always", { "severity": "warning" }],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "mixin",
          "include",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "for",
          "each",
          "while"
        ]
      }
    ]
  }
}
