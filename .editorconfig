# editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.htaccess]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.txt]
indent_style = space
indent_size = 4

[*.js]
quote_type = single
